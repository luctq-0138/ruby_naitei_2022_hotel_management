<div class="breadcrumb-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-text">
          <h2>Sign up</h2>
          <div class="bt-option">
            <%= link_to t(".home"), root_path %>
            <span>Sign up</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="form-container">
  <div>
    <%= form_for(@user) do |f| %>
      <%= f.label :name, t(".form.name"), class: "required" %>
      <%= f.text_field :name, class: "form-control" %>
      <%= raw error_message(@user, :name) %>
      <%= f.label :email, t(".form.email"), class: "required" %>
      <%= f.email_field :email, class: "form-control" %>
      <%= raw error_message(@user, :email) %>
      <%= f.label :phone_number, "Phone Number", class: "required" %>
      <%= f.number_field :phone_number, class: "form-control" %>
      <%= raw error_message(@user, :phone_number) %>
      <%= f.label :address, "Address", class: "required" %>
      <%= f.text_field :address, class: "form-control" %>
      <%= raw error_message(@user, :address) %>
      <%= f.label :password, t(".form.password"), class: "required" %>
      <%= f.password_field :password, class: "form-control" %>
      <%= raw error_message(@user, :password) %>
      <%= f.label :password_confirmation, t(".form.password_confirm"), class: "required" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <%= raw error_message(@user, :password_confirmation) %>
      <%= f.submit t(".sign_up"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
