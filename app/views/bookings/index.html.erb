<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-text">
          <h2>
            <%= t ".booking_history" %>
          </h2>
          <div class="bt-option">
            <%= link_to t(".home"), root_path %>
            <span>
              <%= t ".booking_history" %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% if @bookings.any? %>
  <!-- Main content -->
  <section class="booking_list_section" style="padding-bottom: 100px">
    <div class="col-12">
      <div class="card">
        <!-- /.card-header -->
        <div class="card-body">
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <th><%= t(".booking_date") %></th>
                <th><%= t(".check_in_date") %></th>
                <th><%= t(".check_out_date") %></th>
                <th><%= t(".status_booking") %></th>
                <th><%= t(".room_type") %></th>
                <th><%= t(".room_number") %></th>
                <th><%= t(".total_amount") %></th>
                <th><%= t(".actions") %></th>
              </tr>
            </thead>
            <tbody>
              <%= render @bookings %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-lg-12 ">
      <div class="room-pagination">
        <%== pagy_bootstrap_nav @pagy %>
      </div>
    </div>
  </section>
<% else %>
  <p class="text-center"><%= t ".not_found_booking" %></p>
<% end %>
