<div class="review-item">
  <div class="ri-pic">
    <img class="user_avatar" src="https://firebasestorage.googleapis.com/v0/b/hotel-management-a5ac1.appspot.com/o/faces-1.jpg?alt=media&token=ee3913a3-75fd-4107-8fa7-988f251046d0" alt="">
  </div>
  <div class="ri-text">
    <span><%= review.created_at.strftime(Settings.date.format)%></span>
    <div class="rating">
      <% review.star_rate.times do %>
        <i class="fa fa-star"></i>
      <% end %>
    </div>
    <h5><%= review.user.name %></h5>
    <p><%= review.review %></p>
  </div>
</div>
