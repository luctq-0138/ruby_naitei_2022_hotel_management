<div class="breadcrumb-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-text">
          <h2>Log in</h2>
          <div class="bt-option">
            <%= link_to t(".home"), root_path %>
            <span>Log in</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="form-container">
  <div>
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email, t(".form.email"), :class => "required" %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t(".form.password"), :class => "required" %>
      <%= link_to t(".forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t(".form.remember") %></span>
      <% end %>
      <%= f.submit t(".form.btn_submit"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t(".new_user") %> <%= link_to t(".signup"), signup_path %></p>
  </div>
</div>
