<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-text">
          <h2><%= t ".our_rooms"%></h2>
          <div class="bt-option">
            <%= link_to t(".home"), root_path %>
            <span><%= t ".rooms" %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Breadcrumb Section End -->
<section class="room-details-section spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-8" style="margin-bottom: 10px">
        <div class="room-details-item">
          <%= image_tag(@room_type.image, alt: "")%>
          <div class="rd-text">
            <div class="rd-title">
              <div class="rdt-left">
                <h3><%= @room_type.name %></h3>
                <div class="rating">
                  <% @room_type.reviews.average(:star_rate).floor.times do %>
                    <i class="fa fa-star"></i>
                  <% end %>
                </div>
              </div>
            </div>
            <h2><%= @room_type.cost %>$<span>/<%= t ".pernight" %></span></h2>
            <table>
              <tbody>
                <tr>
                  <td class="r-o"><%= t ".size" %>:</td>
                  <td><%= @room_type.size %> <%= t ".m2" %></td>
                </tr>
                <tr>
                  <td class="r-o"><%= t ".capacity" %>:</td>
                  <td><%= t ".max_person" %> <%= @room_type.capacity %></td>
                </tr>
                <tr>
                  <td class="r-o"><%= t ".service" %>:</td>
                  <td><%= @room_type.services %></td>
                </tr>
              </tbody>
            </table>
            <p class="f-para">
              <%= @room_type.description %>
            </p>
          </div>
        </div>
        <div class="rd-reviews">
          <h4>Reviews</h4>
          <div style="overflow-y: scroll; height: 600px; padding: 10px">
            <%= render @reviews %>
          </div>
        </div>
        <% if check_review(@room_type.id) %>
          <%= render "reviews/add_review" %>
        <% end %>
      </div>
      <div class="col-lg-4">
        <div class="shb-mobile-sidebar">
          <div class="shb-booking-your-stay-wrapper">
            <%= render "check_available_form", room_type: @room_type %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
